{
    "name": "Gadjah Society - Link Checker",
    "description": "A browser extension for checking websites that had been registered to the database of Gadjah Society.",
    "version": "1.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/portal_16.png",
            "32": "/images/portal_32.png",
            "48": "/images/portal_48.png",
            "128": "/images/portal_128.png"
        }
    },
    "icons": {
        "16": "/images/portal_16.png",
        "32": "/images/portal_32.png",
        "48": "/images/portal_48.png",
        "128": "/images/portal_128.png"
    }
}